{
  "name": "radio-api",
  "version": "1.6.0",
  "description": "REST API for accessing public data about a radio station.",
  "private": true,
  "type": "module",
  "engines": {
    "node": "24"
  },
  "main": "app.js",
  "scripts": {
    "start": "tsx app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint lib test",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WHRB/radio-api"
  },
  "keywords": [
    "radio",
    "api"
  ],
  "author": "Carl Pillot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WHRB/radio-api/issues"
  },
  "homepage": "https://github.com/WHRB/radio-api",
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.0.0",
    "logfmt": "^1.3.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "node-cache": "^5.0.0",
    "superagent": "^10.2.3",
    "tsx": "^4.20.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "nock": "^14.0.10",
    "prettier": "3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.3"
  }
}
